<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:padding="10dp"
    android:orientation="vertical" android:layout_width="match_parent" android:background="#ffffcc"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent" android:layout_below="@+id/heading" android:id="@+id/banklistview" android:layout_marginTop="20dp"
        android:layout_height="match_parent" android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content" android:text="Blood Banks in Gwalior" android:id="@+id/heading"
        android:textColor="#e24040" android:textSize="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>