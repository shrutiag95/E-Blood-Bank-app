        <style name = "AppTheme" parent = "@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#a19d7b</item>
        <item name="colorPrimaryDark">#d2cda1</item>
        <item name="colorAccent">#e9e3b4</item>
